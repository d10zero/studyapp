<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2875A8"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:id="@+id/page"
    android:baselineAligned="false">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/applogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginpage_logo"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create an Account"
        android:id="@+id/loginpage_title"
        android:layout_margin="10dp"
        android:layout_below="@+id/loginpage_logo"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="left"
        android:id="@+id/firstNameField"
        android:layout_marginTop="20dp"
        android:hint="FIRST NAME"
        android:singleLine="false"
        android:capitalize="words"
        android:selectAllOnFocus="true"
        android:typeface="sans"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_below="@+id/loginpage_title" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="left"
        android:id="@+id/lastNameField"
        android:hint="LAST NAME"
        android:capitalize="words"
        android:selectAllOnFocus="true"
        android:typeface="sans"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_below="@+id/firstNameField" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:gravity="left"
        android:id="@+id/emailField"
        android:layout_marginTop="15dp"
        android:hint="WISCMAIL"
        android:capitalize="words"
        android:selectAllOnFocus="true"
        android:typeface="sans"
        android:layout_weight="1"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_below="@+id/lastNameField" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:gravity="left"
        android:id="@+id/passField"
        android:layout_marginTop="15dp"
        android:hint="PASSWORD"
        android:selectAllOnFocus="true"
        android:typeface="sans"
        android:layout_weight="1"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_below="@+id/emailField" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="16dp"
        android:id="@+id/loginpage_registerButton"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:textColor="#2875A8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passField"/>


</RelativeLayout>
</ScrollView>