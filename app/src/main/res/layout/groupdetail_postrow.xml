<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebackground"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted By"
        android:textSize="16dp"
        android:textColor="#2875A8"
        android:layout_margin="10dp"
        android:id="@+id/groupdetail_usernamepost"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="This would be the the post that someone would make that would make in order to get in touch with people"
        android:layout_margin="15dp"
        android:id="@+id/groupdetail_userpostcontent"/>

</LinearLayout>