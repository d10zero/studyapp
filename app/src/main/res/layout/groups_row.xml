<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:textSize="20dp"
        android:textColor="#2875a7"
        android:id="@+id/mygroups_groupname"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="##"
        android:textSize="14dp"
        android:id="@+id/mygroups_nummembers"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor Name"
        android:layout_margin="10dp"
        android:textSize="14dp"
        android:id="@+id/mygroups_instructorname"
        android:layout_below="@id/mygroups_groupname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="AddMyGroups"
        android:textColor="#9FCC08"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mygroups_nummembers"
        android:layout_marginTop="10dp"
        android:id="@+id/mygroups_addgroup"
        android:padding="5dp"/>

</RelativeLayout>