<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="#2875A8"
        android:id="@+id/homepage_header"
        android:layout_alignParentTop="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/applogo"
            android:id="@+id/homepage_logo"
            android:visibility="visible"
            android:layout_centerInParent="true" />


        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/account"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/homepage_accountinfo"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:padding="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/whiteborderbluebackground"
        android:layout_below="@+id/homepage_header"
        android:layout_toLeftOf="@+id/homepage_groupbutton"
        android:text="Posts"
        android:id="@+id/homepage_postsbutton"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/homepage_groupbutton"
        android:background="@drawable/blueborderwhitebackground"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/homepage_header"
        android:text="Groups"
        android:textColor="#2875A7"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="23dp"
        android:textColor="#767676"
        android:id="@+id/homepage_textView"
        android:layout_below="@+id/homepage_header"
        android:layout_margin="10dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/homepage_listviewposts"
        android:background="@drawable/whiteborder"
        android:layout_below="@+id/homepage_textView"
        android:layout_above="@+id/homepage_reserveTable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </ListView>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/homepage_listviewgroups"
        android:background="@drawable/whiteborder"
        android:layout_below="@+id/homepage_textView"
        android:layout_above="@+id/homepage_reserveTable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone">
    </ListView>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homepage_reserveTable"
        android:layout_above="@+id/homepage_footer"
        android:text="Reserve a Room"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#2875A7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="@drawable/whiteborder"
        android:id="@+id/homepage_footer"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/homepage_createPost"
            android:src="@drawable/editiconblue"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/groups"
            android:padding="10dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/homepage_myGroups"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/search"
            android:id="@+id/homepage_search"
            android:padding="10dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />


        <EditText
            android:layout_width="240dp"
            android:layout_height="fill_parent"
            android:id="@+id/homepage_searchfield"
            android:hint="Search"
            android:paddingLeft="10dp"
            android:background="@drawable/roundedcorners_edittext"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/homepage_search"
            android:visibility="gone"
            android:maxWidth="240dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="24dp"
            android:id="@+id/homepage_exitsearch"
            android:layout_centerVertical="true"
            android:textColor="#767676"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:padding="10dp"/>

    </RelativeLayout>


</RelativeLayout>
