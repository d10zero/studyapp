<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ceeaff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#0066b3"
        android:id="@+id/homepage_header"
        android:layout_alignParentTop="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/applogo"
            android:id="@+id/homepage_logo"
            android:visibility="visible"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/serach"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/homepage_search"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/account"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/homepage_accountinfo"
            android:visibility="visible"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/homepage_searchfield"
            android:background="@drawable/roundedcorners_edittext"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/homepage_search"
            android:visibility="gone"
            android:maxWidth="150dp"
            android:layout_centerVertical="true" />
        <IconTextView
            android:text="{fa-times}"
            android:id="@+id/homepage_exitsearch"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:textSize="25dp"
            android:textColor="#D8D8D8"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/homepage_searchfield"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="20dp"
        android:id="@+id/homepage_textView"
        android:layout_below="@+id/homepage_header"
        android:layout_margin="10dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/homepage_listview"
        android:background="#ffffff"
        android:layout_below="@+id/homepage_textView"
        android:layout_above="@+id/homepage_reserveTable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </ListView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homepage_reserveTable"
        android:layout_above="@+id/homepage_footer"
        android:text="Reserve a Room"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/whiteborder"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#0066b3"
        android:id="@+id/homepage_footer"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/homepage_createPost"
            android:layout_toRightOf="@+id/homepage_myGroups"
            android:layout_toLeftOf="@+id/homepage_myClasses"
            android:src="@drawable/editicon"
            android:padding="15dp"
            android:layout_marginTop="-5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="20dp"
            android:text="My\nGroups"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/homepage_myGroups"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="20dp"
            android:text="My\nPosts"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/homepage_myClasses"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

    </RelativeLayout>


</RelativeLayout>
